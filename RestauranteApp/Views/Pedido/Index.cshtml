@using RestauranteApp
@using RestauranteApp.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@*@model IEnumerable<RestauranteApp.Models.PedidoViewModel>*@
@model RestauranteApp.Models.PedidoViewModel

<h1>Pedido</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Enviar" asp-controller="Pedido" method="post">
            <div class="form-group">
                <label asp-for="Entrada" class="control-label"></label>
                <input asp-for="Entrada" id="entrada" class="form-control" />
                <span asp-validation-for="Entrada" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Saida" class="control-label"></label>
                <input asp-for="Saida" id="saida" class="form-control" readonly />
            </div>
            <div>

                <button type="submit" class="btn btn-primary btn-block" id="btn"> Enviar Pedido</button>

            </div>
        </form>
    </div>
</div>
<br>
<br>

<table class="table">
    <thead>
        <tr>
            <th>
                Entrada
            </th>
            <th>
                Saída
            </th>
        </tr>
    </thead>
    <tbody>







        @foreach (var item in (Model.HistoricoPedidos ?? new List<RestauranteApp.Domain.Pedido>()))

        {


            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Entrada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Saida)
                </td>
            </tr>
        }

    </tbody>
</table>

<script src="~/js/site.js"></script>